# OpenLineage Configuration
OPENLINEAGE_URL=http://localhost:5000
OPENLINEAGE_NAMESPACE=nbxflow_dev
OPENLINEAGE_API_KEY=

# OpenTelemetry Configuration  
OTEL_SERVICE_NAME=nbxflow_examples
OTEL_ENABLE_CONSOLE=true
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=

# Prometheus Configuration (optional)
NBX_PROM_ENABLED=false
NBX_PROM_PORT=9108

# Behavior Configuration
NBX_WARN_ON_MISSING_IO=true

# Contracts Configuration
NBX_CONTRACTS_DIR=.nbxflow/contracts

# LLM Configuration (optional - choose one)
# For OpenAI
NBX_LLM_PROVIDER=openai
NBX_LLM_MODEL=gpt-4
NBX_LLM_API_KEY=your_openai_api_key_here
NBX_LLM_ENDPOINT=

# For Azure OpenAI  
# NBX_LLM_PROVIDER=azure-openai
# NBX_LLM_MODEL=gpt-4
# NBX_LLM_API_KEY=your_azure_openai_key
# NBX_LLM_ENDPOINT=https://your-resource.openai.azure.com

# Development/Testing flags
NBX_DEBUG=true